@model IEnumerable<Coupon>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Coupons List</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    <br />
    @if (Model.Count() > 0)
    {
        <div>
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(m => m.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Discount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.MinimumAmount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.IsActive)
                    </th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach (var coupon in Model)
                {
            <tr>
                <td>
                    @Html.DisplayFor(m => coupon.Name)
                </td>
                <td>
                    @Html.DisplayFor(m => coupon.Discount)
                </td>
                <td>
                    @Html.DisplayFor(m => coupon.MinimumAmount)
                </td>
                <td>
                    @Html.DisplayFor(m => coupon.IsActive)
                </td>
                <td>
                    <partial name="_TableButtonPartial" model="coupon.Id" />
                </td>
            </tr>
                }
            </table>
        </div>
    }
    else
    {
        <p>No coupons exist...</p>
    }
</div>

